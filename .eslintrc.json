{
	"env": {
		"es2021": true,
		"node": true
	},
	"parser": "vue-eslint-parser",
	"parserOptions": {
		"sourceType": "module",
		"parser": "@typescript-eslint/parser"
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-recommended"
	],
	"rules": {
		"semi": ["error", "never"],
		"quotes": ["error", "single"],
		"indent": ["error", "tab"],
		"comma-dangle": ["error", "never"]
	}
}